rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /audio/patients/{patientId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.patientId == patientId;
    }

    // TODO: tighten default access; deny all other storage paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}


